---
import Typescript from "../assets/icons/Typescript.astro";
import Github from "../assets/icons/Github.astro";
import Git from "../assets/icons/Git.astro";
import Docker from "../assets/icons/Docker.astro";
import NestJS from "../assets/icons/NestJS.astro";
import React from "../assets/icons/React.astro";
import NextJS from "../assets/icons/NextJS.astro";
import GraphQL from "../assets/icons/GraphQL.astro";
import NodeJS from "../assets/icons/NodeJS.astro";
import AstroIcon from "../assets/icons/AstroIcon.astro";
import Rust from "../assets/icons/Rust.astro";
---

<section class="flex flex-col relative bg-white shadow-customWhite shadow-box gap-5 my-32 dark:shadow-custom dark:bg-[#17171C]">
  <div class="stock-ticker">
    <ul>
      <li class="minus flex gap-3 items-center">
        <Typescript width="32" heigth="32" />
        <span class="text-2xl text-black/80 dark:text-white">Typescript</span>
      </li>
      <li class="minus flex gap-3 items-center">
        <Github width="32" heigth="32" />
        <span class="text-2xl text-black/80 dark:text-white">Github</span>
      </li>
      <li class="minus flex gap-3 items-center">
        <Git width="32" heigth="32" />
        <span class="text-2xl text-black/80 dark:text-white">Git</span>
      </li>
      <li class="minus flex gap-3 items-center">
        <Docker width="32" heigth="32" />
        <span class="text-2xl text-black/80 dark:text-white">Docker</span>
      </li>
      <li class="minus flex gap-3 items-center">
        <NestJS width="32" heigth="32" />
        <span class="text-2xl text-black/80 dark:text-white">NestJS</span>
      </li>
      <li class="minus flex gap-3 items-center">
        <Rust width="32" heigth="32" />
        <span class="text-2xl text-black/80 dark:text-white">Rust</span>
      </li>
    </ul>

    <ul aria-hidden="true">
        <li class="minus flex gap-3 items-center">
          <Typescript width="32" heigth="32" />
          <span class="text-2xl text-black/80 dark:text-white">Typescript</span>
        </li>
        <li class="minus flex gap-3 items-center">
          <Github width="32" heigth="32" />
          <span class="text-2xl text-black/80 dark:text-white">Github</span>
        </li>
        <li class="minus flex gap-3 items-center">
          <Git width="32" heigth="32" />
          <span class="text-2xl text-black/80 dark:text-white">Git</span>
        </li>
        <li class="minus flex gap-3 items-center">
          <Docker width="32" heigth="32" />
          <span class="text-2xl text-black/80 dark:text-white">Docker</span>
        </li>
        <li class="minus flex gap-3 items-center">
          <NestJS width="32" heigth="32" />
          <span class="text-2xl text-black/80 dark:text-white">NestJS</span>
        </li>
      </ul>
  </div>

  <div class="stock-ticker">
    <ul id="reverse">
      <li class="minus flex gap-3 items-center">
        <React width="32" heigth="32" />
        <span class="text-2xl text-black/80 dark:text-white">React</span>
      </li>
      <li class="minus flex gap-3 items-center">
        <NextJS width="32" heigth="32" />
        <span class="text-2xl text-black/80 dark:text-white">NextJS</span>
      </li>
      <li class="minus flex gap-3 items-center">
        <GraphQL width="32" heigth="32" />
        <span class="text-2xl text-black/80 dark:text-white">GraphQL</span>
      </li>
      <li class="minus flex gap-3 items-center">
        <NodeJS width="32" heigth="32" />
        <span class="text-2xl text-black/80 dark:text-white">NodeJS</span>
      </li>
      <li class="minus flex gap-3 items-center">
        <AstroIcon width="32" heigth="32" />
        <span class="text-2xl text-black/80 dark:text-white">Astro</span>
      </li>
    </ul>

    <ul id="reverse" aria-hidden="true">
        <li class="minus flex gap-3 items-center">
          <React width="32" heigth="32" />
          <span class="text-2xl text-black/80 dark:text-white">React</span>
        </li>
        <li class="minus flex gap-3 items-center">
          <NextJS width="32" heigth="32" />
          <span class="text-2xl text-black/80 dark:text-white">NextJS</span>
        </li>
        <li class="minus flex gap-3 items-center">
          <GraphQL width="32" heigth="32" />
          <span class="text-2xl text-black/80 dark:text-white">GraphQL</span>
        </li>
        <li class="minus flex gap-3 items-center">
          <NodeJS width="32" heigth="32" />
          <span class="text-2xl text-black/80 dark:text-white">NodeJS</span>
        </li>
        <li class="minus flex gap-3 items-center">
          <AstroIcon width="25" heigth="25" />
          <span class="text-2xl text-black/80 dark:text-white">Astro</span>
        </li>
      </ul>
  </div>
  <div class="bg-fade-white absolute inset-0 pointer-events-none dark:bg-fade"></div>
</section>

