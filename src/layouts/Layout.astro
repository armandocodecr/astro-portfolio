---
import "@fontsource-variable/onest"
import Header from "../components/Header/Header.astro";
import { ViewTransitions } from "astro:transitions"
interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://res.cloudinary.com">
		<link rel="preload" as="image" href="/pixelart.png">
		<link rel="icon" href="/favicon.svg" type="image/x-icon">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />

		 {/* Google / Search Engine Tags  */}
		 <meta itemprop="name" content="Porfolio de Armando Cortés Murillo - Desarrollador y Programador Web con 15 años de experiencia" />
		 <meta itemprop="description" content=`Contrata a Desarrollador de Software junior de Costa Rica con experiencia en la creación de soluciones tecnológicas innovadoras. Especializado en 
		 optimizar operaciones empresariales mediante aplicaciones personalizadas. Apasionado por el aprendizaje continuo y la adaptación a nuevos retos 
		 en el desarrollo de software. 👨‍💻` />
		 <meta itemprop="image" content="https://res.cloudinary.com/dyuj1zglt/image/upload/v1712873518/portfolio-projects/npaofwzjkfmswfq43odb.png" />

		 {/* Facebook Meta Tags */}
		 <meta property="og:locale" content="es_ES">
		 <meta property="og:title" content={ title } />
		 <meta property="og:url" content="https://armando-murillo.vercel.app/" />
		 <meta property="og:type" content="website" />
		 <meta property="og:description" content=`Contrata a Desarrollador de Software junior de Costa Rica con experiencia en la creación de soluciones tecnológicas innovadoras. Especializado en 
		 optimizar operaciones empresariales mediante aplicaciones personalizadas. Apasionado por el aprendizaje continuo y la adaptación a nuevos retos 
		 en el desarrollo de software. 👨‍💻`/>
		 <meta property="description" content=`Contrata a Desarrollador de Software junior de Costa Rica con experiencia en la creación de soluciones tecnológicas innovadoras. Especializado en 
		 optimizar operaciones empresariales mediante aplicaciones personalizadas. Apasionado por el aprendizaje continuo y la adaptación a nuevos retos 
		 en el desarrollo de software. 👨‍💻` />
		 <meta property="og:image" content="https://res.cloudinary.com/dyuj1zglt/image/upload/v1712873518/portfolio-projects/npaofwzjkfmswfq43odb.png" />
		 <meta property="og:site_name" content="armando-murillo.vercel.app">

		 <link
		   rel="canonical"
		   href={`https://armando-murillo.vercel.app/`}
		 />

		 {/* Twitter Meta Tags */}
		 <meta name="twitter:site" content="@Armando_Code" />
		 <meta name="twitter:creator" content="@Armando_Code" />
		 <meta name="twitter:card" content="summary_large_image" />
		 <meta name="twitter:title" content={ title } />
		 <meta name="twitter:url" content="https://armando-murillo.vercel.app//" />
		 <meta name="twitter:image" content="https://res.cloudinary.com/dyuj1zglt/image/upload/v1712873518/portfolio-projects/npaofwzjkfmswfq43odb.png" />
		 <meta name="twitter:image:alt" content="ArmandoCode 👨‍💻 - Soy un simple desarrollador web que quiere compartir con los demás lo que aprende día con día. 👨‍💻" />
		 <meta name="twitter:description" content=`Contrata a Desarrollador de Software junior de Costa Rica con experiencia en la creación de soluciones tecnológicas innovadoras. Especializado en 
		 optimizar operaciones empresariales mediante aplicaciones personalizadas. Apasionado por el aprendizaje continuo y la adaptación a nuevos retos 
		 en el desarrollo de software. 👨‍💻` />
	</head>
	<body class="relative text-black dark:text-white">
		<div
      		class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-gray-50 dark:bg-gray-950
      		bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(217,216,255,0.5),rgba(255,255,255,0.9))]
      		dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    	></div>
		<Header />
		<slot />
	</body>
</html>

<style>

	:root {
        color-scheme: light dark;
    }

	html {
        font-family: "Onest Variable", system-ui, sans-serif;
        scroll-behavior: smooth;
    }

	body {
		color: rgba(17, 17, 17, 0.9);
        display: flex;
		align-items: center;
        flex-direction: column;
        min-height: 100vh;
        overscroll-behavior: none;
	}

	@media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }

      @media (prefers-color-scheme: dark) {
        body {
          color: rgba(255, 255, 255, 0.9);
        }
      }
</style>
